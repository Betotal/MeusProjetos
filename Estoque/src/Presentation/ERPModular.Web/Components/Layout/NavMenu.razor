<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ERP<span style="color: #38bdf8;">Modular</span></a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Context="authContext">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="counter">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
                    </NavLink>
                </div>

                <AuthorizeView Roles="Admin">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="weather">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather (Admin)
                        </NavLink>
                    </div>
                </AuthorizeView>

                <div class="separator mt-3 mb-2"></div>

                <div class="user-block px-3 py-2 mb-2">
                    <div class="d-flex flex-column">
                        <span class="user-name text-white">@authContext.User.GetFullName()</span>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="user-tenant text-info" style="font-size: 0.7rem;">ID: @authContext.User.GetTenantId()</span>
                            <span class="badge bg-primary" style="font-size: 0.6rem;">@authContext.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                        </div>
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Account/Logout">
                        <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Sair
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Account/Login">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Entrar
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

<style>
    .separator {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 0 1rem;
    }
    .user-block {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        margin: 0.5rem 1rem;
    }
    .user-name {
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>

