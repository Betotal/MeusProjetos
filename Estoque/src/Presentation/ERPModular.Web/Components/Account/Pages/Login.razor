@page "/Account/Login"
@using System.ComponentModel.DataAnnotations
@inject SignInManager<ERPUser> SignInManager
@inject NavigationManager NavigationManager

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo">
                <span class="logo-text">ERP</span><span class="logo-accent">Modular</span>
            </div>
            <h1>Bem-vindo de volta</h1>
            <p>Acesse sua conta para continuar</p>
        </div>

        <EditForm Model="Input" OnValidSubmit="LoginUser" FormName="loginForm">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="email">E-mail</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope"></i>
                    <InputText id="email" @bind-Value="Input.Email" @bind-Value:event="oninput" class="form-control" placeholder="seu@email.com" autocomplete="username" />
                </div>
                <ValidationMessage For="() => Input.Email" class="text-danger" />
            </div>

            <div class="form-group">
                <label for="password">Senha</label>
                <div class="input-wrapper">
                    <i class="fas fa-lock"></i>
                    <InputText id="password" type="password" @bind-Value="Input.Password" @bind-Value:event="oninput" class="form-control" placeholder="••••••" autocomplete="current-password" />
                </div>
                <ValidationMessage For="() => Input.Password" class="text-danger" />
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ErrorMessage
                </div>
            }

            <div class="form-options">
                <label class="checkbox-container">
                    <InputCheckbox @bind-Value="Input.RememberMe" />
                    <span class="checkmark"></span>
                    Lembrar-me
                </label>
                <a href="/Account/ForgotPassword" class="forgot-link">Esqueceu a senha?</a>
            </div>

            <button type="submit" class="btn-login" disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="spinner"></span>
                }
                else
                {
                    <span>Entrar</span>
                }
            </button>
        </EditForm>

        <div class="login-footer">
            <p>Não tem uma conta? <a href="/Account/Register">Solicite acesso</a></p>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    public LoginInput Input { get; set; } = new();

    [Parameter]
    [SupplyParameterFromQuery]
    public string? Error { get; set; }

    public string? ErrorMessage { get; set; }
    public bool IsLoading { get; set; }

    protected override void OnInitialized()
    {
        if (Error == "InvalidLogin")
        {
            ErrorMessage = "Usuário ou senha inválidos.";
        }
    }

    public class LoginInput
    {
        [Required(ErrorMessage = "O e-mail é obrigatório")]
        [EmailAddress(ErrorMessage = "E-mail inválido")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "A senha é obrigatória")]
        [DataType(DataType.Password)]
        public string Password { get; set; } = string.Empty;

        public bool RememberMe { get; set; }
    }

    private void LoginUser()
    {
        ErrorMessage = null;
        IsLoading = true;

        // Nota: Em Blazor Server, o SignInManager não consegue emitir o cookie diretamente
        // em um evento de componente interativo. Redirecionamos para uma Página Razor real.
        var url = $"/Account/PerformLogin?email={Uri.EscapeDataString(Input.Email)}&password={Uri.EscapeDataString(Input.Password)}&rememberMe={Input.RememberMe}";
        NavigationManager.NavigateTo(url, forceLoad: true);
    }
}

