@page "/Admin/SaaS/Licenses"
@rendermode InteractiveServer
@using ERPModular.Shared.Domain.Models

@using ERPModular.Shared.Infrastructure.Persistence
@using Microsoft.EntityFrameworkCore
@attribute [Authorize(Roles = "SuperAdmin")]
@inject SharedDbContext DbContext
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Gestão de Licenças - ERPModular</PageTitle>

<div class="container-fluid pt-2 pb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="text-white fw-bold mb-1">Gestão de Licenças</h2>
            <p class="text-white-50 mb-0">Controle de acesso, validade e limites dos Tenants</p>
        </div>
    </div>

    <div class="card bg-dark border-secondary rounded-4 shadow-lg overflow-hidden">
        <div class="card-header bg-dark border-secondary p-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="text-white-50 small mb-1">Filtrar por nome/ID</label>
                    <input type="text" @bind="searchTerm" @bind:event="oninput" 
                           class="form-control bg-dark border-secondary text-white" 
                           placeholder="Buscar tenant..." />
                </div>
                <div class="col-md-3">
                    <label class="text-white-50 small mb-1">Status</label>
                    <select @bind="filterStatus" class="form-select bg-dark border-secondary text-white">
                        <option value="">Todos</option>
                        @foreach (var status in Enum.GetValues<StatusLicenca>())
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0 align-middle">
                    <thead class="table-dark-header border-secondary text-white-50 small">
                        <tr>
                            <th class="ps-4">TENANT</th>
                            <th>DOMÍNIO</th>
                            <th>VALIDADE</th>
                            <th>STATUS</th>
                            <th>TIPO</th>
                            <th class="text-end pe-4">AÇÕES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (filteredLicencas == null)
                        {
                            <tr><td colspan="6" class="text-center py-5"><div class="spinner-border text-accent" role="status"></div></td></tr>
                        }
                        else if (!filteredLicencas.Any())
                        {
                            <tr><td colspan="6" class="text-center py-5 text-white-50">Nenhuma licença encontrada.</td></tr>
                        }
                        else
                        {
                            @foreach (var lic in filteredLicencas)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="tenant-avatar me-3">
                                                <i class="fas fa-building text-accent"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-white">@lic.TenantId</div>
                                                <small class="text-white-50">ID: @lic.Id.ToString().Substring(0,8)</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary font-monospace">@lic.DomainId</span>
                                    </td>
                                    <td>
                                        @if (lic.FimValidade.HasValue)
                                        {
                                            var isExpired = lic.FimValidade < DateTime.UtcNow;
                                            <span class="@(isExpired ? "text-danger fw-bold" : "text-white")">
                                                @lic.FimValidade.Value.ToShortDateString()
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">VITALÍCIA</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusClass(lic.Status)">
                                            @lic.Status.ToString().ToUpper()
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-white-50 small">@lic.Tipo</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-outline-warning me-1" title="Editar Licença" @onclick="() => EditLicense(lic)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-info" title="Ver Histórico" @onclick="() => ViewHistory(lic.TenantId)">
                                            <i class="fas fa-history"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (editingLicenca != null)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark border-secondary shadow-lg">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white">Editar Licença: @editingLicenca.TenantId</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => editingLicenca = null"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label text-white-50">Status da Licença</label>
                        <select class="form-select bg-dark border-secondary text-white" @bind="editingLicenca.Status">
                            @foreach (var status in Enum.GetValues<StatusLicenca>())
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white-50">Data de Expiração</label>
                        <input type="date" class="form-control bg-dark border-secondary text-white" 
                               value="@editingLicenca.FimValidade?.ToString("yyyy-MM-dd")" 
                               @onchange="(e) => SetEndDate(e.Value?.ToString())" />
                        <small class="text-white-50 mt-1 d-block">Deixe em branco para vitalícia.</small>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label text-white-50">Usuários Max</label>
                            <input type="number" class="form-control bg-dark border-secondary text-white" @bind="editingLicenca.MaxUsuarios" />
                        </div>
                        <div class="col">
                            <label class="form-label text-white-50">Empresas Max</label>
                            <input type="number" class="form-control bg-dark border-secondary text-white" @bind="editingLicenca.MaxEmpresas" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white-50">Observações</label>
                        <textarea class="form-control bg-dark border-secondary text-white" rows="2" @bind="editingLicenca.Observacoes"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" @onclick="() => editingLicenca = null">Cancelar</button>
                    <button type="button" class="btn btn-accent" @onclick="SaveLicenseChanges">Salvar Alterações</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .text-accent { color: #38bdf8 !important; }
    .btn-accent { background-color: #38bdf8; color: #0f172a; font-weight: 600; }
    .btn-accent:hover { background-color: #0ea5e9; color: #0f172a; }
    
    .table-dark-header { background: rgba(0,0,0,0.2) !important; }
    
    .tenant-avatar {
        width: 40px;
        height: 40px;
        background: rgba(56, 189, 248, 0.1);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .table tbody tr { border-bottom: 1px solid rgba(255,255,255,0.05); transition: background 0.2s; }
    .table tbody tr:hover { background: rgba(255,255,255,0.02) !important; }
    
    .modal-content { border-radius: 1.25rem; }
</style>

@code {
    private List<Licenca>? licencas;
    private string searchTerm = "";
    private string? filterStatus;
    
    private Licenca? editingLicenca;

    protected override async Task OnInitializedAsync()
    {
        licencas = await DbContext.Licencas
            .AsNoTracking()
            .OrderByDescending(l => l.InicioValidade)
            .ToListAsync();
    }

    private IEnumerable<Licenca>? filteredLicencas => licencas?
        .Where(l => (string.IsNullOrEmpty(searchTerm) || l.TenantId.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
                    (string.IsNullOrEmpty(filterStatus) || l.Status.ToString() == filterStatus));

    private string GetStatusClass(StatusLicenca status) => status switch
    {
        StatusLicenca.Ativa => "bg-success bg-opacity-10 text-success border border-success border-opacity-25",
        StatusLicenca.Suspensa => "bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25",
        StatusLicenca.Cancelada => "bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25",
        _ => "bg-secondary"
    };

    private void EditLicense(Licenca lic)
    {
        // Criar uma cópia para edição
        editingLicenca = new Licenca 
        { 
            Id = lic.Id, 
            TenantId = lic.TenantId,
            DomainId = lic.DomainId,
            FimValidade = lic.FimValidade,
            Status = lic.Status,
            Tipo = lic.Tipo,
            MaxUsuarios = lic.MaxUsuarios,
            MaxEmpresas = lic.MaxEmpresas,
            Observacoes = lic.Observacoes,
            Ativa = lic.Ativa
        };
    }

    private void SetEndDate(string? dateStr)
    {
        if (editingLicenca == null) return;
        if (DateTime.TryParse(dateStr, out var date))
            editingLicenca.FimValidade = date;
        else
            editingLicenca.FimValidade = null;
    }

    private async Task SaveLicenseChanges()
    {
        if (editingLicenca == null) return;

        var dbLic = await DbContext.Licencas.FirstOrDefaultAsync(l => l.Id == editingLicenca.Id);
        if (dbLic != null)
        {
            // Auditoria (Simples por enquanto, expandiremos depois)
            // Aqui poderíamos injetar um serviço de auditoria
            
            dbLic.Status = editingLicenca.Status;
            dbLic.FimValidade = editingLicenca.FimValidade;
            dbLic.MaxUsuarios = editingLicenca.MaxUsuarios;
            dbLic.MaxEmpresas = editingLicenca.MaxEmpresas;
            dbLic.Observacoes = editingLicenca.Observacoes;

            // Auditoria
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "unknown";
            var currentUserName = user.Identity?.Name ?? "Admin";

            var auditLog = new AdminAuditLog
            {
                UsuarioId = currentUserId,
                UsuarioNome = currentUserName,
                Acao = "Alteração de Licença",
                Detalhes = $"Licença do Tenant '{dbLic.TenantId}' alterada. Status: {dbLic.Status}, Fim: {dbLic.FimValidade?.ToShortDateString() ?? "Vitalícia"}.",
                TenantId = dbLic.TenantId,
                DataHora = DateTime.UtcNow
            };
            DbContext.AdminAuditLogs.Add(auditLog);

            await DbContext.SaveChangesAsync();
            
            // Atualiza a lista local
            await OnInitializedAsync();
            editingLicenca = null;
        }
    }

    private void ViewHistory(string tenantId)
    {
        Navigation.NavigateTo($"/Admin/SaaS/Audit?tenantId={tenantId}");
    }
}
