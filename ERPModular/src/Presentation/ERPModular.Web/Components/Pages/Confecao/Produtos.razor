    }
    .custom-modal-content { width: 100%; max-width: 450px; padding: 15px; }
    .hov-dark:hover { background: rgba(255,255,255,0.05); }
</style>

@code {
    private List<Produto>? produtos;
    private bool showForm = false;
    private bool showVarModal = false;
    private Produto editingProduct = new();
    private ProdutoVariacao newVar = new();
    private string errorMessage = "";
    private bool IsReadOnly = false;

    protected override async Task OnInitializedAsync()
    {
        var execContext = ExecutionContextAccessor.GetContext();
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        
        if (execContext.DomainId != "confecao" && !user.IsInRole("SuperAdmin"))
        {
            Navigation.NavigateTo("/Account/AccessDenied?reason=wrong_domain");
            return;
        }

        var tenantId = user.GetTenantId();
        var domainId = user.GetDomainId();
        if (!string.IsNullOrEmpty(tenantId) && !string.IsNullOrEmpty(domainId))
        {
            var (status, _, _) = await SaaSControl.GetLicenseStatusAsync(tenantId, domainId);
            IsReadOnly = (status == ERPModular.Web.Services.LicenseStatus.ReadOnly);
        }

        await LoadProdutos();
    }

    private async Task LoadProdutos()
    {
        try
        {
            using var context = await DbFactory.CreateDbContextAsync();
            produtos = await context.Produtos
                .Include(p => p.Variacoes)
                .OrderByDescending(p => p.CreatedAt)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar produtos: {ex.Message}");
            produtos = new();
        }
    }

    private void ShowAddForm()
    {
        editingProduct = new Produto();
        editingProduct.Variacoes = new List<ProdutoVariacao>();
        showForm = true;
    }

    private void EditProduct(Produto p)
    {
        // Clone para edição segura
        editingProduct = new Produto 
        { 
            Id = p.Id, 
            Nome = p.Nome, 
            CodigoReferencia = p.CodigoReferencia, 
            Categoria = p.Categoria,
            Descricao = p.Descricao,
            Variacoes = p.Variacoes.Select(v => new ProdutoVariacao {
                Id = v.Id,
                ProdutoId = v.ProdutoId,
                Tamanho = v.Tamanho,
                PrecoVenda = v.PrecoVenda,
                SaldoAtual = v.SaldoAtual,
                EstoqueMinimo = v.EstoqueMinimo
            }).ToList()
        };
        showForm = true;
    }

    private void ShowAddVariacaoModal()
    {
        newVar = new ProdutoVariacao { PrecoVenda = 0, EstoqueMinimo = 5 };
        showVarModal = true;
    }

    private void AddVariacaoToList()
    {
        if (string.IsNullOrWhiteSpace(newVar.Tamanho)) return;
        
        editingProduct.Variacoes.Add(newVar);
        showVarModal = false;
    }

    private void RemoveVariacao(ProdutoVariacao v)
    {
        editingProduct.Variacoes.Remove(v);
    }

    private async Task HandleSave()
    {
        errorMessage = "";
        try
        {
            if (IsReadOnly)
            {
                errorMessage = "Erro: licenciamento expirado.";
                return;
            }

            using var context = await DbFactory.CreateDbContextAsync();

            var existente = await context.Produtos
                .Include(p => p.Variacoes)
                .IgnoreQueryFilters()
                .FirstOrDefaultAsync(p => p.Id == editingProduct.Id);

            if (existente == null)
            {
                // NOVO PRODUTO
                // Como Variacoes é uma coleção navegável, o EF salvará tudo em cascata.
                context.Produtos.Add(editingProduct);
            }
            else
            {
                // EDIÇÃO DE CABEÇALHO
                existente.Nome = editingProduct.Nome;
                existente.CodigoReferencia = editingProduct.CodigoReferencia;
                existente.Categoria = editingProduct.Categoria;
                existente.Descricao = editingProduct.Descricao;

                // SINCRONIZAÇÃO DE VARIAÇÕES (Simplificada: Remove o que não está na lista nova e add novos)
                // Para uma gestão mais complexa (como manter IDs), precisaríamos de lógica de merge.
                // Aqui vamos limpar e re-adicionar para agilizar o CRUD inicial.
                context.ProdutoVariacoes.RemoveRange(existente.Variacoes);
                foreach (var v in editingProduct.Variacoes)
                {
                    v.Id = Guid.NewGuid(); // Novos IDs para o merge simplificado
                    v.ProdutoId = existente.Id;
                    existente.Variacoes.Add(v);
                }
            }

            await context.SaveChangesAsync();
            showForm = false;
            await LoadProdutos();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao salvar: {ex.InnerException?.Message ?? ex.Message}";
        }
    }

    private void CancelForm() => showForm = false;
}
