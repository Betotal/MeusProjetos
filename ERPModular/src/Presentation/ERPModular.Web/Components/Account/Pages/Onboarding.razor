@page "/Account/Onboarding"
@rendermode InteractiveServer
@using ERPModular.Shared.Domain.Models
@using ERPModular.Shared.Infrastructure.Persistence
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.ComponentModel.DataAnnotations
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager Navigation

<div class="onboarding-container animate__animated animate__fadeIn">
    <div class="onboarding-card animate__animated animate__zoomIn">
        <div class="header">
            <div class="logo mb-4">
                <span class="logo-text">ERP</span><span class="logo-accent">Modular</span>
            </div>
            <h3>Seja bem-vindo ao seu novo ERP!</h3>
            <p>Falta pouco para você começar. Revise seus dados e defina sua senha de acesso.</p>
        </div>

        @if (IsLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-info" role="status"></div>
                <p class="mt-2">Carregando seus dados...</p>
            </div>
        }
        else if (UserFound == null)
        {
            <div class="alert alert-warning">
                Convite não encontrado ou já processado. Por favor, entre em contato com o suporte.
            </div>
        }
        else
        {
            <EditForm Model="Model" OnValidSubmit="HandleOnboarding">
                <DataAnnotationsValidator />

                <div class="form-section mb-4">
                    <h5><i class="bi bi-building me-2"></i>Sua Empresa</h5>
                    <div class="mb-3">
                        <label class="form-label">Nome da Empresa (Pode alterar)</label>
                        <InputText @bind-Value="Model.EmpresaNome" class="form-control" />
                        <ValidationMessage For="() => Model.EmpresaNome" class="text-danger" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Segmento (Fixo)</label>
                        <input type="text" class="form-control bg-dark" value="@DomainName" readonly />
                        <small class="text-muted">O segmento foi definido no seu contrato e não pode ser alterado.</small>
                    </div>
                </div>

                <div class="form-section mb-4">
                    <h5><i class="bi bi-person-badge me-2"></i>Seu Perfil</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nome Completo</label>
                            <InputText @bind-Value="Model.FullName" class="form-control" />
                            <ValidationMessage For="() => Model.FullName" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Como quer ser chamado?</label>
                            <InputText @bind-Value="Model.DisplayName" class="form-control" placeholder="Ex: João" />
                            <ValidationMessage For="() => Model.DisplayName" class="text-danger" />
                            <small class="text-muted">Este nome aparecerá nos menus do sistema.</small>
                        </div>
                    </div>
                </div>

                <div class="form-section mb-4">
                    <h5><i class="bi bi-shield-lock me-2"></i>Recuperação de Acesso</h5>
                    <div class="alert alert-info bg-info bg-opacity-10 border-0 text-info small mb-3">
                        <i class="fas fa-info-circle me-2"></i> Estes dados serão usados para sua segurança. Caso esqueça sua senha, o administrador poderá <strong>Liberar sua Senha</strong> e você deverá responder esta pergunta para prosseguir.
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Pergunta de Segurança (Ex: Nome do meu primeiro pet?)</label>
                            <InputText @bind-Value="Model.SecurityQuestion" class="form-control" placeholder="Crie uma pergunta que só você saiba a resposta" />
                            <ValidationMessage For="() => Model.SecurityQuestion" class="text-danger" />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Sua Resposta (Deve ser exata)</label>
                            <InputText @bind-Value="Model.SecurityAnswer" class="form-control" placeholder="Resposta para a pergunta acima" />
                            <ValidationMessage For="() => Model.SecurityAnswer" class="text-danger" />
                        </div>
                    </div>
                </div>

                <div class="form-section mb-4">
                    <h5><i class="bi bi-key me-2"></i>Senha de Acesso</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sua Nova Senha</label>
                            <InputText @bind-Value="Model.Password" type="password" class="form-control" />
                            <ValidationMessage For="() => Model.Password" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Confirme a Senha</label>
                            <InputText @bind-Value="Model.ConfirmPassword" type="password" class="form-control" />
                            <ValidationMessage For="() => Model.ConfirmPassword" class="text-danger" />
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger">@ErrorMessage</div>
                }

                <div class="actions">
                    <button type="submit" class="btn btn-success w-100 py-3" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Finalizando...</span>
                        }
                        else
                        {
                            <span><i class="bi bi-check-circle me-2"></i>Concluir Cadastro e Começar!</span>
                        }
                    </button>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    private OnboardingModel Model = new();
    private ERPUser? UserFound;
    private Tenant? TenantFound;
    private string DomainName = "";
    private bool IsLoading = true;
    private bool IsProcessing = false;
    private string? ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Email))
        {
            IsLoading = false;
            return;
        }

        // Usar escopo isolado para evitar conflito com o Middleware
        using var scope = ScopeFactory.CreateScope();
        var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ERPUser>>();
        var dbContext = scope.ServiceProvider.GetRequiredService<SharedDbContext>();

        UserFound = await userManager.FindByEmailAsync(Email);
        
        // Só permite onboarding se o convite ainda não foi aceito E o token confere
        if (UserFound != null && !UserFound.InvitationAccepted && UserFound.InvitationToken == Token)
        {
            TenantFound = await dbContext.Tenants.FindAsync(UserFound.TenantId);
            var dominio = await dbContext.Dominios.FindAsync(UserFound.DomainId);
            DomainName = dominio?.Nome ?? "N/A";

            // Preenche com as sugestões do Super-Admin
            Model.Email = UserFound.Email!;
            Model.FullName = UserFound.FullName;
            Model.DisplayName = UserFound.DisplayName!;
            Model.EmpresaNome = TenantFound?.NomeFantasia ?? "";
        }
        else
        {
            UserFound = null; // Bloqueia acesso se já aceitou
        }

        IsLoading = false;
    }

    private async Task HandleOnboarding()
    {
        if (UserFound == null || TenantFound == null) return;

        IsProcessing = true;
        ErrorMessage = null;

        try
        {
            // Usar escopo isolado para evitar conflito com o Middleware
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ERPUser>>();
            var dbContext = scope.ServiceProvider.GetRequiredService<SharedDbContext>();

            // Buscar novamente no escopo isolado
            var dbUser = await userManager.FindByEmailAsync(UserFound.Email!);
            var dbTenant = await dbContext.Tenants.FindAsync(TenantFound.Id);

            if (dbUser == null || dbTenant == null || dbUser.InvitationToken != Token)
            {
                ErrorMessage = "Dados não encontrados ou convite inválido.";
                return;
            }

            // 1. Atualizar Tenant (Nome Fantasia)
            dbTenant.NomeFantasia = Model.EmpresaNome;
            dbContext.Tenants.Update(dbTenant);

            // 2. Atualizar Usuário
            dbUser.FullName = Model.FullName;
            dbUser.DisplayName = Model.DisplayName;
            dbUser.SecurityQuestion = Model.SecurityQuestion;
            dbUser.SecurityAnswer = Model.SecurityAnswer;
            dbUser.InvitationAccepted = true; // Marca como finalizado
            dbUser.InvitationToken = null; // Limpa o token por segurança
            
            // 3. Atualizar Senha
            var removeResult = await userManager.RemovePasswordAsync(dbUser); // Remove a temporária
            var addResult = await userManager.AddPasswordAsync(dbUser, Model.Password);

            if (addResult.Succeeded)
            {
                await userManager.UpdateAsync(dbUser);
                // dbContext.SaveChangesAsync() removido pois o userManager já persiste as mudanças

                // Sucesso! Redireciona para login
                Navigation.NavigateTo("/Account/Login?onboarding=success");
            }
            else
            {
                ErrorMessage = "Erro na senha: " + string.Join(", ", addResult.Errors.Select(e => e.Description));
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Erro interno: " + ex.Message;
        }
        finally
        {
            IsProcessing = false;
        }
    }

    public class OnboardingModel
    {
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Nome completo é obrigatório")]
        public string FullName { get; set; } = "";

        [Required(ErrorMessage = "Nome de usuário é obrigatório")]
        [StringLength(30, ErrorMessage = "Máximo de 30 caracteres")]
        public string DisplayName { get; set; } = "";

        [Required(ErrorMessage = "Nome da empresa é obrigatório")]
        public string EmpresaNome { get; set; } = "";

        [Required(ErrorMessage = "A senha é obrigatória")]
        [MinLength(6, ErrorMessage = "A senha deve ter no mínimo 6 caracteres")]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Confirme sua senha")]
        [Compare("Password", ErrorMessage = "As senhas não conferem")]
        public string ConfirmPassword { get; set; } = "";

        [Required(ErrorMessage = "A pergunta de segurança é obrigatória")]
        public string SecurityQuestion { get; set; } = "";

        [Required(ErrorMessage = "A resposta é obrigatória")]
        public string SecurityAnswer { get; set; } = "";
    }
}

