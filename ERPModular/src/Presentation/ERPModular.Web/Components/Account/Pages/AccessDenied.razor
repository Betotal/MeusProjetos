@page "/Account/AccessDenied"
@layout ERPModular.Web.Components.Layout.MainLayout
@inject NavigationManager Navigation

<div class="error-container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="text-center">
        <div class="icon-container mb-4">
            <i class="fas fa-ban text-danger display-1"></i>
        </div>
        <h1 class="display-4 fw-bold text-white mb-3">Acesso Negado</h1>
        <p class="lead text-muted mb-5">
            Você não tem permissão para acessar este recurso.<br>
            Se acredita que isso é um erro, contate o administrador.
        </p>
        
        <div class="d-flex gap-3 justify-content-center">
            <button class="btn btn-outline-light px-4" @onclick="GoBack">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </button>
            <a href="/" class="btn btn-primary px-4">
                <i class="fas fa-home me-2"></i>Ir para Início
            </a>
        </div>
    </div>
</div>

@code {
    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}
