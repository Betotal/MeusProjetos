@page "/Account/ForgotPassword"
@rendermode InteractiveServer
@using ERPModular.Shared.Domain.Models
@using Microsoft.AspNetCore.Identity
@using System.ComponentModel.DataAnnotations
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager Navigation
@inject ERPModular.Shared.Domain.Interfaces.IEmailSender EmailSender

<div class="recovery-container animate__animated animate__fadeIn">
    <div class="recovery-card animate__animated animate__zoomIn">
        <div class="recovery-header text-center mb-4">
            <div class="logo mb-4">
                <span class="logo-text">ERP</span><span class="logo-accent">Modular</span>
            </div>
            <h3>Recuperar Senha</h3>
            <p class="text-white-50">Insira seu e-mail para receber as instruções de recuperação.</p>
        </div>

        @if (!string.IsNullOrEmpty(InfoMessage))
        {
            <div class="recovery-success animate__animated animate__fadeIn text-center">
                <div class="success-icon mb-4">
                    <i class="fas fa-lock fa-3x text-warning"></i>
                </div>
                <h4 class="text-white">Aguardando Liberação</h4>
                <p class="text-white-50 mb-4">
                    @InfoMessage
                </p>
                
                <div class="d-grid gap-3">
                    <a href="/Account/Login" class="btn btn-accent btn-lg py-3 rounded-4 fw-bold shadow">Voltar para o Login</a>
                    <button class="btn btn-link text-white-50 text-decoration-none" @onclick="() => InfoMessage = null">Tentar outro e-mail</button>
                </div>
            </div>
        }
        else
        {
            <EditForm Model="Model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="mb-4">
                    <label class="form-label text-white-50 small fw-bold">E-MAIL CADASTRADO</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope text-white-50"></i>
                        <InputText @bind-Value="Model.Email" class="form-control" placeholder="exemplo@empresa.com" />
                    </div>
                    <ValidationMessage For="() => Model.Email" class="text-danger small mt-2" />
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger small mb-4 animate__animated animate__shakeX">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ErrorMessage
                    </div>
                }

                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-accent btn-lg py-3 rounded-4 fw-bold shadow" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Processando...</span>
                        }
                        else
                        {
                            <span><i class="fas fa-paper-plane me-2"></i>Enviar Instruções</span>
                        }
                    </button>
                    <a href="/Account/Login" class="btn btn-link text-white-50 text-decoration-none">Lembrei minha senha</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    private ForgotPasswordModel Model = new();
    private bool IsProcessing = false;
    private string? InfoMessage;
    private string? ErrorMessage;

    private async Task HandleSubmit()
    {
        IsProcessing = true;
        ErrorMessage = null;
        InfoMessage = null;

        try
        {
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ERPUser>>();

            var user = await userManager.FindByEmailAsync(Model.Email);
            
            // 1. Bloqueio por inatividade ou exclusão
            if (user == null || !user.IsActive)
            {
                ErrorMessage = "Seu acesso está bloqueado pela administração da empresa. Por favor, entre em contato direto com seu gestor.";
                return;
            }

            // 2. Se o admin já liberou, pula para o desafio
            if (user.ResetPasswordAllowed)
            {
                Navigation.NavigateTo($"/Account/SecurityReset?email={Uri.EscapeDataString(user.Email!)}");
                return;
            }

            // 3. Caso contrário, registra a solicitação
            user.ResetPasswordRequested = true;
            await userManager.UpdateAsync(user);

            InfoMessage = "Sua solicitação de nova senha foi enviada ao administrador da sua empresa. Assim que ele liberar o acesso nas configurações de usuário, você poderá prosseguir respondendo sua pergunta de segurança.";
        }
        catch (Exception ex)
        {
            ErrorMessage = "Ocorreu um erro ao processar sua solicitação: " + ex.Message;
        }
        finally
        {
            IsProcessing = false;
        }
    }

    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "O e-mail é obrigatório")]
        [EmailAddress(ErrorMessage = "E-mail inválido")]
        public string Email { get; set; } = "";
    }
}

