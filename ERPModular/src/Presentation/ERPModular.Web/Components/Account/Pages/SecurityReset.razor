@page "/Account/SecurityReset"
@rendermode InteractiveServer
@using ERPModular.Shared.Domain.Models
@using Microsoft.AspNetCore.Identity
@using System.ComponentModel.DataAnnotations
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager Navigation

<div class="reset-container animate__animated animate__fadeIn">
    <div class="reset-card animate__animated animate__zoomIn">
        <div class="reset-header text-center mb-4">
            <div class="logo mb-4">
                <span class="logo-text">ERP</span><span class="logo-accent">Modular</span>
            </div>
            <h3>Desafio de Segurança</h3>
            <p class="text-white-50">Responda sua pergunta secreta para prosseguir com a redefinição de senha.</p>
        </div>

        @if (IsLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-accent" role="status"></div>
                <p class="mt-2 text-white-50">Validando dados...</p>
            </div>
        }
        else if (UserFound == null)
        {
            <div class="alert alert-danger text-center">
                Usuário não encontrado ou processo inválido.
                <div class="mt-3">
                    <a href="/Account/Login" class="btn btn-sm btn-outline-light">Voltar ao Login</a>
                </div>
            </div>
        }
        else
        {
            <EditForm Model="Model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="mb-4">
                    <label class="form-label text-accent small fw-bold mb-1">SUA PERGUNTA SECRETA</label>
                    <div class="p-3 bg-dark bg-opacity-50 border border-secondary rounded-3 text-white mb-3">
                        @UserFound.SecurityQuestion
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label text-white-50 small fw-bold">SUA RESPOSTA</label>
                    <div class="input-wrapper">
                        <i class="fas fa-comment-dots text-white-50"></i>
                        <InputText @bind-Value="Model.Answer" class="form-control" placeholder="Digite a resposta exata" />
                    </div>
                    <ValidationMessage For="() => Model.Answer" class="text-danger small mt-2" />
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger small mb-4 animate__animated animate__shakeX">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ErrorMessage
                    </div>
                }

                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-accent btn-lg py-3 rounded-4 fw-bold shadow" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Validando...</span>
                        }
                        else
                        {
                            <span><i class="fas fa-shield-alt me-2"></i>Validar Resposta</span>
                        }
                    </button>
                    <a href="/Account/Login" class="btn btn-link text-white-50 text-decoration-none">Cancelar</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    private ChallengeModel Model = new();
    private ERPUser? UserFound;
    private bool IsLoading = true;
    private bool IsProcessing = false;
    private string? ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Email))
        {
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        using var scope = ScopeFactory.CreateScope();
        var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ERPUser>>();
        
        UserFound = await userManager.FindByEmailAsync(Email);

        if (UserFound == null || !UserFound.ResetPasswordAllowed)
        {
            // Se o admin não liberou, não pode ver a pergunta
            UserFound = null;
        }

        IsLoading = false;
    }

    private async Task HandleSubmit()
    {
        if (UserFound == null) return;

        IsProcessing = true;
        ErrorMessage = null;

        // Validação Case-Insensitive e trim para facilitar
        var normalizedDbAnswer = UserFound.SecurityAnswer?.Trim().ToLowerInvariant();
        var normalizedUserAnswer = Model.Answer.Trim().ToLowerInvariant();

        if (normalizedDbAnswer == normalizedUserAnswer)
        {
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ERPUser>>();
            var dbUser = await userManager.FindByEmailAsync(UserFound.Email!);

            // Gera o token oficial do Identity
            var token = await userManager.GeneratePasswordResetTokenAsync(dbUser!);
            
            // Consome a liberação (terá que pedir ao admin de novo se falhar o reset)
            dbUser!.ResetPasswordAllowed = false;
            await userManager.UpdateAsync(dbUser);

            // Redireciona para a tela final de reset que já existe e é funcional
            Navigation.NavigateTo($"/Account/ResetPassword?email={Uri.EscapeDataString(dbUser.Email!)}&token={Uri.EscapeDataString(token)}");
        }
        else
        {
            ErrorMessage = "Resposta incorreta. Tente novamente ou peça ajuda ao administrador.";
            IsProcessing = false;
        }
    }

    public class ChallengeModel
    {
        [Required(ErrorMessage = "A resposta é obrigatória")]
        public string Answer { get; set; } = "";
    }
}

