@page "/Account/ResetPassword"
@rendermode InteractiveServer
@using ERPModular.Shared.Domain.Models
@using Microsoft.AspNetCore.Identity
@using System.ComponentModel.DataAnnotations
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager Navigation

<div class="reset-container animate__animated animate__fadeIn">
    <div class="reset-card animate__animated animate__zoomIn">
        <div class="reset-header text-center mb-4">
            <div class="logo mb-4">
                <span class="logo-text">ERP</span><span class="logo-accent">Modular</span>
            </div>
            <h3>Nova Senha</h3>
            <p class="text-white-50">Defina sua nova senha de acesso.</p>
        </div>

        @if (Success)
        {
            <div class="text-center animate__animated animate__fadeIn">
                <div class="success-icon mb-4">
                    <i class="fas fa-check-circle fa-4x text-success shadow-sm"></i>
                </div>
                <h4 class="fw-bold">Senha Alterada!</h4>
                <p class="text-white-50 mb-4">Sua conta foi atualizada. Use sua nova senha para acessar o sistema.</p>
                <div class="d-grid">
                    <a href="/Account/Login" class="btn btn-accent btn-lg py-3 rounded-4 fw-bold shadow">Fazer Login Agora</a>
                </div>
            </div>
        }
        else
        {
            <EditForm Model="Model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label text-white-50 small fw-bold">E-MAIL</label>
                    <input type="text" class="form-control bg-dark text-white-50 p-3" value="@Email" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label text-white-50 small fw-bold">NOVA SENHA</label>
                    <div class="input-wrapper">
                        <i class="fas fa-key text-white-50"></i>
                        <InputText @bind-Value="Model.Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                    </div>
                    <ValidationMessage For="() => Model.Password" class="text-danger small mt-2" />
                </div>

                <div class="mb-4">
                    <label class="form-label text-white-50 small fw-bold">CONFIRME A SENHA</label>
                    <div class="input-wrapper">
                        <i class="fas fa-check-double text-white-50"></i>
                        <InputText @bind-Value="Model.ConfirmPassword" type="password" class="form-control" placeholder="Repita a nova senha" />
                    </div>
                    <ValidationMessage For="() => Model.ConfirmPassword" class="text-danger small mt-2" />
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger small mb-4 animate__animated animate__shakeX">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ErrorMessage
                    </div>
                }

                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-accent btn-lg py-3 rounded-4 fw-bold shadow" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Redefinindo...</span>
                        }
                        else
                        {
                            <span><i class="fas fa-shield-alt me-2"></i>Alterar Minha Senha</span>
                        }
                    </button>
                    <a href="/Account/Login" class="btn btn-link text-white-50 text-decoration-none">Cancelar</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    private ResetPasswordModel Model = new();
    private bool IsProcessing = false;
    private bool Success = false;
    private string? ErrorMessage;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Email) || string.IsNullOrEmpty(Token))
        {
            Navigation.NavigateTo("/Account/Login");
        }
    }

    private async Task HandleSubmit()
    {
        IsProcessing = true;
        ErrorMessage = null;

        try
        {
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ERPUser>>();

            var user = await userManager.FindByEmailAsync(Email!);
            if (user == null)
            {
                ErrorMessage = "Usuário não encontrado.";
                return;
            }

            var result = await userManager.ResetPasswordAsync(user, Token!, Model.Password);
            if (result.Succeeded)
            {
                Success = true;
            }
            else
            {
                ErrorMessage = string.Join("; ", result.Errors.Select(e => e.Description));
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Ocorreu um erro: " + ex.Message;
        }
        finally
        {
            IsProcessing = false;
        }
    }

    public class ResetPasswordModel
    {
        [Required(ErrorMessage = "A senha é obrigatória")]
        [MinLength(6, ErrorMessage = "A senha deve ter no mínimo 6 caracteres")]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Confirme sua senha")]
        [Compare("Password", ErrorMessage = "As senhas não conferem")]
        public string ConfirmPassword { get; set; } = "";
    }
}

